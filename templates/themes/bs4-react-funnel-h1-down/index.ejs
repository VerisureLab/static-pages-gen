    <script>
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 0) {
                document.getElementById('header').classList.add('is-scrolled');
            } else {
                document.getElementById('header').classList.remove('is-scrolled');
            }
        });

        window.addEventListener('DOMContentLoaded', () => {
            let match = document.cookie.match('(?:^|;)\\s*_ga=([^;]*)');
            const raw = (match) ? decodeURIComponent(match[1]) : null;
            if (raw) {
                match = raw.match(/(\d+\.\d+)$/);
            }
            const gacId = (match) ? match[1] : null;

            if (gacId && document.body.contains(document.getElementById('lead_client_id'))) {
                document.getElementById('lead_client_id').value = gacId;
            }

            const seenOnTV = document.createElement('div');
            seenOnTV.classList.add('seen-on-tv');
            document.getElementById('hero').append(seenOnTV);
        });
    </script>
</body>
